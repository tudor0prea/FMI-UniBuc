@model Modeltest2021.Models.GiftCard
<h2> Formular editare GiftCard</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "GiftCards",
                   method: FormMethod.Post,
                   routeValues: new { id = Model.Id }))
{

    @Html.Label("Denumire", "Denumire GiftCard")
    <br />
    @Html.TextBox("Denumire", Model.Denumire, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    @Html.ValidationMessageFor(m => m.Denumire, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Descriere", "Descriere")
    <br />
    @Html.TextArea("Descriere", Model.Descriere, new { @class = "form-control summernote" })
    <br />
    @Html.ValidationMessageFor(m => m.Descriere, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("DataExp", "Data expirarii")
    <br /> 
    <input asp-for="DataExp" class="form-control ui-datepicker" type="date" value="@Model.DataExp.Value.ToString("yyyy-MM-dd")" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
    <br />
    @Html.ValidationMessageFor(m => m.DataExp, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Procent", "Valoarea cardului")
    @Html.Editor("Procent", new {@class = "form-control"})
    <br />
    @Html.ValidationMessageFor(m => m.Procent, null, new { @class = "text-danger" })
    <br />
    <br />
    @Html.DropDownListFor(m => m.BrandId,
                new SelectList(Model.Brands, "Value", "Text"),
                "Selectati Brandul", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.BrandId, null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-sm btn-success" type="submit">Modifica articol</button>

}